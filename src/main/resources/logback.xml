<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <property name="LOGS" value="./logs" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%X{user}:%X{requestId}| %date{ISO8601} %-5level
                %logger{35} - %msg%n
            </pattern>
        </encoder>
        <target>System.out</target>
    </appender>

    <appender name="RollingFile"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/flowdaq-logger.log</file>
        <encoder
            class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
        </encoder>
 
        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGS}/archived/flowdaq-logger-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    
    <logger name="org.springframework.boot.autoconfigure.security">
        <level value="DEBUG"/>
    </logger>
    <logger name="org.springframework.jdbc.datasource">
        <level value="INFO"/>
    </logger>

    <logger name="org.springframework.security">
        <level value="DEBUG"/>
    </logger>
    <logger name="org.springframework.web">
        <level value="DEBUG"/>
    </logger>

    <logger name="org.eclipse">
        <level value="OFF"/>
    </logger>

    <logger name="org.mortbay">
        <level value="OFF"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="RollingFile" />
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>